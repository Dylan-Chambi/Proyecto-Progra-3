<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fondoTitulo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#4BBFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imagenLibro"
        android:layout_width="60dp"
        android:layout_height="53dp"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toBottomOf="@+id/fondoTitulo"
        app:layout_constraintEnd_toStartOf="@+id/textoGuias"
        app:layout_constraintStart_toStartOf="@+id/fondoTitulo"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/libro" />

    <TextView
        android:id="@+id/textoGuias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GUÍAS"
        android:textColor="#000000"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/fondoTitulo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/fondoTitulo"
        app:layout_constraintTop_toTopOf="@+id/fondoTitulo" />

    <ImageView
        android:id="@+id/guia1"
        android:layout_width="411dp"
        android:layout_height="85dp"
        app:layout_constraintBottom_toTopOf="@+id/guia2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fondoTitulo"
        app:srcCompat="@drawable/guia1" />

    <ImageView
        android:id="@+id/guia2"
        android:layout_width="411dp"
        android:layout_height="87dp"
        app:layout_constraintBottom_toTopOf="@+id/guia3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guia1"
        app:srcCompat="@drawable/guia2" />

    <ImageView
        android:id="@+id/guia3"
        android:layout_width="411dp"
        android:layout_height="87dp"
        app:layout_constraintBottom_toTopOf="@+id/guia4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guia2"
        app:srcCompat="@drawable/guia3" />

    <ImageView
        android:id="@+id/guia4"
        android:layout_width="411dp"
        android:layout_height="87dp"
        app:layout_constraintBottom_toTopOf="@+id/guia5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guia3"
        app:srcCompat="@drawable/guia4" />

    <ImageView
        android:id="@+id/guia5"
        android:layout_width="411dp"
        android:layout_height="87dp"
        app:layout_constraintBottom_toTopOf="@+id/guia6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guia4"
        app:srcCompat="@drawable/guia5" />

    <ImageView
        android:id="@+id/guia6"
        android:layout_width="411dp"
        android:layout_height="87dp"
        app:layout_constraintBottom_toTopOf="@+id/guia7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guia5"
        app:srcCompat="@drawable/guia6" />

    <ImageView
        android:id="@+id/guia7"
        android:layout_width="411dp"
        android:layout_height="87dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guia6"
        app:srcCompat="@drawable/guia7" />
</androidx.constraintlayout.widget.ConstraintLayout>